extends ../layouts/common.pug

block content
  h1 Login

  if errors
    each error in errors
      .alert.alert-danger= error

  form(method="POST")
    .form-group
      label(for="name") Name
      input#email.form-control(name="name", type="text", value=values ? values.name : "")

    .form-group
      label(for="phone") Phone
      input#password.form-control(name="phone", type="password", value=values ? values.phone : "")

    button.btn.btn-primary Login
